<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.uaharoni.mymoviescatalog">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_appicon_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".App.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".App.MenuActivity" />
        <activity android:name=".App.WebSearchActivity" android:parentActivityName=".App.MainActivity" />
        <activity android:name=".App.NewEditMovieActivity" android:parentActivityName=".App.MainActivity"  android:windowSoftInputMode="adjustNothing"/>
    </application>
    <uses-permission android:name="android.permission.INTERNET" />
</manifest>